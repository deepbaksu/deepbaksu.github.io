{
  "name": "deepbaksu",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "hexo generate",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo clean && hexo server",
    "check": "npm run lint && npm run test && npm run format:check && ts-node src/index.ts",
    "lint": "eslint .",
    "test": "jest",
    "format": "prettier --write \"**/*.{js,json,html,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{js,json,html,css,md,yaml,yml}\""
  },
  "hexo": {
    "version": "5.4.0"
  },
  "dependencies": {
    "bulma-stylus": "^0.9.1",
    "hexo": "^5.4.0",
    "hexo-all-minifier": "^0.5.7",
    "hexo-asset-link": "^2.1.0",
    "hexo-component-inferno": "^0.10.5",
    "hexo-deployer-git": "^3.0.0",
    "hexo-feed": "^1.1.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^2.0.0",
    "hexo-generator-sitemap": "^2.1.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-inject": "^1.0.0",
    "hexo-log": "^2.0.0",
    "hexo-renderer-ejs": "^1.0.0",
    "hexo-renderer-inferno": "^0.1.3",
    "hexo-renderer-markdown-it-plus": "^1.0.4",
    "hexo-renderer-stylus": "^2.0.1",
    "hexo-server": "^2.0.0",
    "hexo-util": "^2.4.0",
    "inferno": "^7.4.8",
    "inferno-create-element": "^7.4.8"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "glob": "^7.1.6",
    "hexo-excerpt": "^1.1.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --verbose --staged --pattern \"**/*.*(js|md|json|yaml|yml|html|css)\" --pattern \"*.*(js|json|md|yaml|yml)\""
    }
  }
}
